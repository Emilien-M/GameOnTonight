@inject IGroupsService GroupsService

<MudDialog>
    <TitleContent>
        <div class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.Link" />
            <MudText Typo="Typo.h6">Créer un code d'invitation</MudText>
        </div>
    </TitleContent>
    
    <DialogContent>
        <MudText>
            Un nouveau code d'invitation sera généré pour ce groupe.
            Vous pourrez le partager avec d'autres personnes pour qu'elles rejoignent le groupe.
        </MudText>
    </DialogContent>
    
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="_isCreating">Annuler</MudButton>
        <MudButton 
            Color="Color.Primary" 
            Variant="Variant.Filled"
            OnClick="CreateAsync"
            Disabled="_isCreating">
            @if (_isCreating)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                <span>Création...</span>
            }
            else
            {
                <span>Créer</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;
    
    [Parameter]
    public int GroupId { get; set; }
    
    private bool _isCreating;

    private async Task CreateAsync()
    {
        _isCreating = true;
        StateHasChanged();
        
        try
        {
            var code = await GroupsService.CreateInviteCodeAsync(GroupId);
            MudDialog.Close(DialogResult.Ok(code));
        }
        catch
        {
            MudDialog.Close(DialogResult.Cancel());
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
