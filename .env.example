# ============================================
# GameOnTonight - Environment Variables
# ============================================
# Copy this file to .env and configure the values
# DO NOT commit .env to version control!
# ============================================

# ==========================================
# PostgreSQL Database
# ==========================================
POSTGRES_USER=gameadmin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=gameontonight

# ==========================================
# JWT Authentication
# ==========================================
# IMPORTANT: Generate a secure random string (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
JWT_EXPIRY_MINUTES=60
JWT_ISSUER=GameOnTonight
JWT_AUDIENCE=GameOnTonightClients

# ==========================================
# API Configuration (optional)
# ==========================================
# API URL used by the frontend. Default is /api (relative path via nginx proxy).
# Only change this if you need to use an absolute URL (e.g., separate API server).
# API_BASE_URL=/api

# ==========================================
# Port Configuration (optional)
# ==========================================
# Port for the application (both frontend and API via reverse proxy)
APP_PORT=80

# ==========================================
# Database Migration (optional)
# ==========================================
# Set to true to automatically apply migrations on startup
AUTO_MIGRATE=true

# ==========================================
# Docker Image Version (optional, for ghcr.io)
# ==========================================
# Use a specific version tag or 'latest'
# VERSION=latest
# VERSION=1.0.0
